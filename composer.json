{
    "name": "thinktandem/minimis-project",
    "description": "Template for Tandem's Drupal 8 Minimis Distribution.",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "John Ouellet",
            "email": "john@thinktandem.io",
            "homepage": "https://thinktandem.io",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "git",
            "url": "https://github.com/thinktandem/minimis"
        },
        {
            "type": "git",
            "url": "https://github.com/thinktandem/bootstrap"
        },
        {
            "type": "package",
            "package": {
                "name": "dinbror/blazy",
                "version": "1.8.2",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "blazy"
                },
                "source": {
                    "type": "git",
                    "url": "https://github.com/dinbror/blazy",
                    "reference": "1.8.2"
                }
            }
        }
    ],
    "require": {
        "cweagans/composer-patches": "^1.6",
        "thinktandem/minimis": "dev-8.x-1.x"
    },
    "require-dev": {
        "drush/drush": "^9.0",
        "drupal/console": "^1.0.2"
    },
    "scripts": {
        "post-install-cmd": [
            "find web -name '.git' | xargs rm -rf"
        ],
        "post-update-cmd": [
            "find web -name '.git' | xargs rm -rf"
        ],
        "nuke": "rm -r -f web vendor composer.lock"
    },
    "extra": {
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches-file": "composer.patches.json"
    }
}
